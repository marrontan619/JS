{
    "name" : "Font Switcher",
    "version": "0.0.1",
    "manifest_version": 2,
    
    "description": "メールフォルダのフォントを等幅にする",
    
    "page_action" : {
        "default_icon" : "icon.png",
        "default_title" : "Font Switcher",
        "default_popup" : "popup.html"
    },
    
     "permissions": [
        "tabs",
        "activeTab"
     ],
    
    "background": {
    "scripts": ["background.js"]
  }
}